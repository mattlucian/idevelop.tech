{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2020"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@/*": ["./packages/web/src/*"]
    }
  },
  "include": ["packages/**/*", "infra/**/*", "sst.config.ts"],
  "exclude": ["node_modules", "dist", ".sst"]
}
